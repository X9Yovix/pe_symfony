{% extends 'base.html.twig' %}

{% block title %}List Voiture
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h1 class="text-center">List des Voitures</h1>
				<table class="table w-100">
					<tr>
						<th>Serie</th>
						<th>Date MC</th>
						<th>Modele</th>
						<th>Prix par jour</th>
						<th colspa="2">Actions</th>
					</tr>
					{% for i in liste_voitures %}
						<tr>
							<td>{{ i.serie }}</td>
							<td>{{ i.dateMiseCirculation | date('d-m-Y') }}</td>
							<td>{{ i.modele }}</td>
							<td>{{ i.prixJour }}</td>
							<td>
								<a class="btn btn-danger" href="{{ path('voiture_delete', {'id': i.id}) }}">Supprimer</a>
								<a class="btn btn-warning" href="{{ path('voiture_update', {'id': i.id}) }}">Mise a jour</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<th>empty</th>
						</tr>
					{% endfor %}
				</table>
			</div>
		</div>
	</div>

{% endblock %}
